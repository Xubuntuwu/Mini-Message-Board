<h1>{{title}}</h1>
<p> Welcome to {{title}}</p>
<h2>Messages</h2>
<p id="message-container">
  {{#each messages}}
    <div class="message">
      <div class="top-bar">
        <p class="name">{{user}}</p>
        <p class="added">{{added}}</p>
      </div>
      <p class="text">{{text}}</p>
    </div>
  {{/each}}
</p>
<p>
  <button class="new-message-refer" type="button"><a href="/new">Create A New Message</a></button>
</p>